@page "/Expenses"
<main id="main" class="main">
    <div class="pagetitle d-flex align-items-center justify-content-between">
        <h1>Expenses</h1>
        <button type="button"
                class="btn btn-primary btn-lg d-flex align-items-center gap-2 shadow-sm"
                data-bs-toggle="modal"
                data-bs-target="#addExpenseModal">
            <i class="bi bi-plus-circle"></i> Add Expenses
        </button>
    </div>

    <section class="section dashboard mt-4">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">
                    <table id="creditEntriesTable"
                           class="table table-dark table-striped table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Date</th>
                                <th>Item Name</th>
                                <th>Quantity</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Modal -->
    <div class="modal fade" id="addExpenseModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Expense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addExpenseForm" class="row g-3">
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input type="text"
                                       class="form-control"
                                       id="itemName"
                                       placeholder="Item Name"
                                       required />
                                <label for="itemName">Item Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date"
                                       class="form-control"
                                       id="purchaseDate"
                                       required />
                                <label for="purchaseDate">Date of Purchase</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="number"
                                       class="form-control"
                                       id="quantity"
                                       placeholder="Quantity"
                                       min="1"
                                       required />
                                <label for="quantity">Quantity</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="number"
                                       class="form-control"
                                       id="rate"
                                       placeholder="Rate"
                                       min="0.01"
                                       step="0.01"
                                       required />
                                <label for="rate">Rate</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="number"
                                       class="form-control"
                                       id="totalAmount"
                                       placeholder="Total Amount"
                                       readonly />
                                <label for="totalAmount">Total Amount</label>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Alerts -->
    <div id="alertsContainer" class="mt-3"></div>
</main>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Runtime.InvokeVoidAsync("initializeDataTableWithAjax", "#creditEntriesTable", "/api/CreditEntries/GetCreditEntries");

            // Initialize the Expense Form jQuery functionality
            await Runtime.InvokeVoidAsync("initializeExpenseForm");
        }
    }
}}
}
